"""
BUILD file for flink-csv module.

This module provides CSV format support for Flink.
"""

load("//tools/bazel:java_library_suite.bzl", "flink_java_library", "flink_java_tests")

# Main library target
flink_java_library(
    name = "flink-csv",
    srcs = glob(["src/main/java/**/*.java"]),
    resources = glob(["src/main/resources/**/*"], allow_empty = True),
    resource_strip_prefix = "flink-formats/flink-csv/src/main/resources",
    deps = [
        "//flink-annotations",
        "//flink-connectors/flink-connector-files",
        "//flink-core",
        "//flink-core-api",
        "//flink-formats/flink-format-common",
        "//flink-table/flink-table-common",
        "//flink-table/flink-table-runtime",
        "@flink_shaded//:org_apache_flink_flink_shaded_jackson",
        "@maven//:com_google_code_findbugs_jsr305",
        "@maven//:org_apache_commons_commons_compress",
        "@maven//:org_apache_commons_commons_text",
        "@maven//:org_slf4j_slf4j_api",
    ],
    visibility = ["//visibility:public"],
)

# Tests
flink_java_tests(
    name = "tests",
    srcs = glob(
        ["src/test/java/**/*Test.java"],
        exclude = [
            # TODO: Fix Calcite dependency version resolution for VARIANT field
            # These tests pass in Maven but fail in Bazel with NoSuchFieldError: VARIANT
            # at FlinkSqlOperatorTable.<clinit>. The Bazel-resolved Calcite version
            # doesn't include the VARIANT field that the code expects. Need to ensure
            # correct Calcite version is resolved in Bazel dependency tree.
            "src/test/java/**/CsvFormatStatisticsReportTest.java",
            "src/test/java/**/CsvFormatFilesystemStatisticsReportTest.java",
            # TODO: Fix ArchUnit frozen violation store support in Bazel (same as flink-json)
            "src/test/java/**/TestCodeArchitectureTest.java",
        ],
    ),
    deps = [
        ":flink-csv",
        # Direct dependencies
        "//flink-connectors/flink-connector-datagen",
        "//flink-connectors/flink-connector-datagen:flink-connector-datagen-test-jar",
        "//flink-connectors/flink-connector-files",
        "//flink-connectors/flink-file-sink-common",
        "//flink-core",
        "//flink-formats/flink-format-common",
        "//flink-table/flink-table-api-scala-bridge",  # Required by tests
        "//flink-table/flink-table-common",
        "//flink-table/flink-table-planner",  # CSV RowData (de)serialization schema testing (per pom.xml lines 99-102)
        "//flink-table/flink-table-runtime",
        "@flink_shaded//:org_apache_flink_flink_shaded_jackson",
        "@maven//:com_google_code_findbugs_jsr305",
        "@maven//:commons_io_commons_io",
        # Test utilities
        "//flink-architecture-tests/flink-architecture-tests-base",  # For ImportOptions
        "//flink-architecture-tests/flink-architecture-tests-test",
        "//flink-table/flink-table-common:flink-table-common-test-jar",
        "//flink-table/flink-table-planner:flink-table-planner-test-jar",  # For table.planner.runtime test utilities
        "//flink-test-utils-parent/flink-connector-test-utils",
        # ArchUnit dependencies (needed directly for compilation, not just via exports)
        "@maven//:com_tngtech_archunit_archunit",
        "@maven//:com_tngtech_archunit_archunit_junit5",
        "@maven//:com_tngtech_archunit_archunit_junit5_api",  # For @ArchTest annotation
    ],
)
