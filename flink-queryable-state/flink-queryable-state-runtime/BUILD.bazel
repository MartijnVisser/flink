"""
BUILD file for flink-queryable-state-runtime module.

This module provides runtime support for queryable state in Flink.
"""

load("//tools/bazel:java_library_suite.bzl", "flink_java_library", "flink_java_tests")

# Main library target
flink_java_library(
    name = "flink-queryable-state-runtime",
    srcs = glob(["src/main/java/**/*.java"]),
    resources = glob(["src/main/resources/**/*"], allow_empty = True),
    resource_strip_prefix = "flink-queryable-state/flink-queryable-state-runtime/src/main/resources",
    deps = [
        "//flink-annotations",
        "//flink-core",
        "//flink-core-api",
        "//flink-queryable-state/flink-queryable-state-client-java",
        "//flink-runtime",
        "@flink_shaded//:org_apache_flink_flink_shaded_netty",
        "@maven//:com_google_code_findbugs_jsr305",
        "@maven//:org_slf4j_slf4j_api",
    ],
    visibility = ["//visibility:public"],
)

# Tests
flink_java_tests(
    name = "tests",
    deps = [
        ":flink-queryable-state-runtime",
        # Test utilities from flink-runtime test-jar
        "//flink-runtime:flink-runtime-test-jar",
        # Direct dependencies
        "//flink-core",
        "@maven//:com_google_code_findbugs_jsr305",
        "@flink_shaded//:org_apache_flink_flink_shaded_netty",
    ],
)
