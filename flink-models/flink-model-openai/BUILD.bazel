"""
BUILD file for flink-model-openai module.

This module provides OpenAI integration for Flink.
"""

load("//tools/bazel:java_library_suite.bzl", "flink_java_library", "flink_java_tests")

flink_java_library(
    name = "flink-model-openai",
    srcs = glob(["src/main/java/**/*.java"]),
    resources = glob(["src/main/resources/**/*"], allow_empty = True),
    resource_strip_prefix = "flink-models/flink-model-openai/src/main/resources",
    deps = [
        "//flink-annotations",
        "//flink-core",
        "//flink-table/flink-table-common",
        "//flink-table/flink-table-runtime",
        "@maven//:com_google_code_findbugs_jsr305",
        "@maven//:com_knuddels_jtokkit",
        "@maven//:com_openai_openai_java",
        "@maven//:com_openai_openai_java_client_okhttp",
        "@maven//:com_openai_openai_java_core",
        "@maven//:org_slf4j_slf4j_api",
    ],
    visibility = ["//visibility:public"],
)

flink_java_tests(
    name = "tests",
    deps = [":flink-model-openai"],
)
