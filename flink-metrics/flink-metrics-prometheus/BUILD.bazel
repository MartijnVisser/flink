"""
BUILD file for flink-metrics-prometheus module.

This module provides Prometheus metrics reporter integration.
"""

load("//tools/bazel:java_library_suite.bzl", "flink_java_library", "flink_java_tests")

# Main library target
flink_java_library(
    name = "flink-metrics-prometheus",
    srcs = glob(["src/main/java/**/*.java"]),
    resources = glob(["src/main/resources/**/*"], allow_empty = True),
    resource_strip_prefix = "flink-metrics/flink-metrics-prometheus/src/main/resources",
    deps = [
        "//flink-annotations",
        "//flink-core",
        "//flink-metrics/flink-metrics-core",
        "@maven//:io_prometheus_simpleclient",
        "@maven//:io_prometheus_simpleclient_common",
        "@maven//:io_prometheus_simpleclient_httpserver",
        "@maven//:io_prometheus_simpleclient_pushgateway",
        "@maven//:org_slf4j_slf4j_api",
    ],
    visibility = ["//visibility:public"],
)

# Tests
flink_java_tests(
    name = "tests",
    deps = [
        ":flink-metrics-prometheus",
        "//flink-metrics/flink-metrics-core:flink-metrics-core-test-jar",  # For test utilities (TestCounter, TestMeter, etc.)
    ],
)
